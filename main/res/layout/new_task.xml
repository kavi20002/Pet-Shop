<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/newTaskText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:hint="@string/new_task"
        android:minHeight="48dp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/newTaskDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:layout_toStartOf="@+id/newTaskTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:hint="Date (MM/dd/yyyy)"
        android:minHeight="48dp"
        android:padding="8dp"/>


    <EditText
        android:id="@+id/newTaskTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:hint="Time (hh:mm AM/PM)"
        android:minHeight="48dp"
        android:padding="8dp"/>



    <Button
        android:id="@+id/taskSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskTime"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:text="@string/taskSAve"
        android:background="@android:color/transparent"
        android:textColor="@android:color/darker_gray"
        android:textAllCaps="false" />

</RelativeLayout>